{
  "manifest_version": 3,
  "name": "GitLeet From Jab we Code",
  "version": "1.0",
  "description": "Push accepted LeetCode solutions to GitHub automatically",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://leetcode.com/*",
    "https://api.github.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/*"],
      "js": ["content.js"],
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
